<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-2.5.xsd">

    <!-- common spring configuration, mainly aura component location adapters -->
    <context:component-scan base-package="configuration" />

    <!-- Aura inspector tests module configuration -->
    <context:component-scan base-package="aura.inspector.impl.**" />
    <context:component-scan base-package="aura.inspector.configuration.**" />

    <!-- for config-yaml-spring -->
    <context:component-scan base-package="com.salesforce.servicelibs.**" />

    <!-- this is dumb but aura seems to require it -->
    <context:component-scan base-package="test.org.auraframework.**" />
</beans>
